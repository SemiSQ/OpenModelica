SRCPATH=$(ANTLRHOME)\lib\cpp\src
INCLPATH=$(ANTLRHOME)\lib\cpp
CPPFLAGS=/O2 /I $(INCLPATH) /D "WIN32" /D "NDEBUG" /D "_LIB" /D "_MBCS" /FD /EHsc /MT /GS /Fd"vc70.pdb" /W3 /nologo /c /Wp64 /Zi /TP
SRCS=$(SRCPATH)\*.cpp
OBJS=*.obj 


all: antlr.lib

antlr.lib: $(OBJS)
	@move /Y dll.obj dll.ob_
	lib.exe /OUT:"antlr.lib" /NOLOGO *.obj
	@move /Y dll.ob_ dll.obj

$(OBJS):$(SRCS)
	$(CC) $(CPPFLAGS) $(SRCS)

clean: 
	del /Q $(OBJS) antlr.lib *.idb *.pdb
