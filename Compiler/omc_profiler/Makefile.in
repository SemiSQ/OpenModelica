LIBSOCKET = @LIBSOCKET@
LIBLPSOLVE55 = @LIBLPSOLVE55@

SHELL	= /bin/sh
CC	= gcc
CFLAGS	= $(USE_CORBA) @CFLAGS@ -pg
RMLHOME	= @rmlhome@
RMLINC  = -I$(RMLHOME)/include/plain


USE_CORBA = @USE_CORBA@

EXEEXT = @EXEEXT@

srcdir = ..
top_builddir = ../..

ifdef USE_CORBA
 CORBALIBS=@CORBALIBS@
else
 CORBALIBS=
endif

LDFLAGS = @LDFLAGS@ -lm -L$(RMLHOME)/lib/plain -lrml_p \
  $(LIBSOCKET) $(CORBALIBS) $(LIBLPSOLVE55) \
  -L../../build/lib/omc @LIBSENDDATA_LDFLAGS@ -llapack -lblas -lsqlite3

PROG = omcp
RMLC	= @rmlc_bin@ -p
RML	= $(RMLHOME)/bin/rml
RMLCFLAGS = -Wr,-ftrace,$(RMLC_INCLUDE_ALL_DIRS)

MAKETARGET = Makefile
include $(srcdir)/Makefile.compiler_subdirs.common
.testvariables:
	# You're using the proper Unix Makefile. Thanks for making my life easier.

$(PROG): $(SRCO) $(SUBDIRS) $(top_builddir)/c_runtime/sendData/*.cpp
	$(CXX) $(CFLAGS) -o $(PROG)$(EXEEXT) $(SRCO) $(AST) $(RTOBJ) $(LDFLAGS) $(PLTPKGFLAGS)
