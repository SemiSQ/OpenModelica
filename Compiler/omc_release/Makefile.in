#
# Makefile for omc
#
# $Id$
#

LIBSOCKET = @LIBSOCKET@
LIBLPSOLVE55 = @LIBLPSOLVE55@

USE_CORBA = @USE_CORBA@

SHELL	= /bin/sh
CC	= @CC@
CXX	= @CXX@
CFLAGS	= @CFLAGS@
RMLHOME	= @rmlhome@
RMLINC  = -I$(RMLHOME)/include/plain

EXEEXT  = @EXEEXT@

srcdir = ..
top_builddir = ../..

ifdef USE_CORBA
 CORBALIBS=@CORBALIBS@
else
 CORBALIBS=
endif

LDFLAGS = @LDFLAGS@ -lm -L$(RMLHOME)/lib/plain -lrml \
  $(LIBSOCKET) $(CORBALIBS) $(LIBLPSOLVE55) \
  -L../../build/lib/omc @LIBSENDDATA_LDFLAGS@ -llapack -lblas -lsqlite3

PROG = omc
RMLC	= @rmlc_bin@
RML	= $(RMLHOME)/bin/rml
RMLCFLAGS = -Wr,-Wshow-warnings@RML_TRACE@,$(RMLC_INCLUDE_ALL_DIRS)

MAKETARGET = Makefile
include $(srcdir)/Makefile.compiler_subdirs.common
.testvariables:
	# You're using the proper Unix Makefile. Thanks for making my life easier.

$(PROG): $(SRCO) $(SUBDIRS) $(top_builddir)/c_runtime/sendData/*.cpp
	$(CXX) $(CFLAGS) -o $(PROG)$(EXEEXT) $(SRCO) $(AST) $(RTOBJ) $(LDFLAGS)
