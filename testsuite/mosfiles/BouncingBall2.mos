loadFile("BouncingBall2.mo");
simulate(BouncingBall,numberOfIntervals=5, tolerance=1e-5); // 2 intervals == 3 values
echo(false); // turns of output 
s:=readSimulationResultSize("BouncingBall_res.plt");
res:=readSimulationResult("BouncingBall_res.plt",{height, velocity},s); 
height:=res[2];
velocity:=res[1];
height:=1000*height;
velocity:=1000*velocity;
height:=floor(height);
velocity:=floor(velocity);
echo(true); // turns on output
height/1000.0; 
velocity/1000.0;
