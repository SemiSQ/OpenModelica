loadFile("WhenStatement1.mo");

simulate(WhenStat, tolerance=1e-3, numberOfIntervals=400);
echo(false); // turns of output
size:=readSimulationResultSize("WhenStat_res.plt");
res:=readSimulationResult("WhenStat_res.plt",{x,y1,y3},size); 

x:=res[1,1];
y1:=res[2,400];
y3:=res[3,400];
x:=1000*x;
y1:=1000*y1;
y3:=1000*y3;
x:=floor(x);
y1:=floor(y1);
y3:=floor(y3);

echo(true); // turns on output
x/1000.0; // rounded value to 3 digits
y1/1000.0;
y3/1000.0;

readFile("output.log"); // Check that output log is emtpy
system("rm -rf WhenStat_* WhenStat.exe WhenStat.cpp WhenStat.makefile WhenStat.libs WhenStat.log output.log"); // remove tmp files.); // remove tmp files.

