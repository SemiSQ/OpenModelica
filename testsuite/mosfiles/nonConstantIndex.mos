  Real x[14];
  // Real v[4];
  Integer i(start = 0);
equation
  assert(time < maxIx, \"Time out of bounds\");
  i = integer(floor(time + 1));
  der(x) = A*x + F* u[i];
end M;");
simulate(M);getErrorString();

